<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_anxin_shu" />

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@null"
        app:title="小酒馆"
        app:titleColor="@color/white" />

    <!--    app:rightIcon="@drawable/icon_settings"-->

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="25dp"
        android:alpha="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAccessibilityServiceStatus"
        app:lottie_autoPlay="true"
        app:lottie_fileName="6095-love-floating.json"
        app:lottie_loop="true"
        app:lottie_speed="0.8" />

    <!--    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="42678-green-love.json"
            app:lottie_loop="true"
            app:lottie_speed="1" />-->

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/red"
        app:lottie_fileName="lf20_sqrntqup.json"
        app:lottie_loop="true"
        app:lottie_speed="0.6" />

    <LinearLayout
        android:id="@+id/llAccessibilityServiceStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">

        <TextView
            android:id="@+id/tvAccessibilityServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="无障碍辅助模式状态"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/accessibilityServiceStatusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:colorBorder="@color/purple_200"
            app:colorDisabled="@color/purple_200"
            app:colorOn="@color/purple_200"
            app:on="false"
            app:textOff="关"
            app:textOn="开" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFloatingWindowStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llAccessibilityServiceStatus">

        <TextView
            android:id="@+id/tvFloatingWindowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="悬浮窗权限状态\n[显示在其他应用的上层]"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/floatingWindowSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:colorBorder="@color/purple_200"
            app:colorDisabled="@color/purple_200"
            app:colorOn="@color/purple_200"
            app:on="false"
            app:textOff="关"
            app:textOn="开" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llClickNumberBtnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llFloatingWindowStatus">

        <TextView
            android:id="@+id/tvClickNumberBtnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="点赞次数"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clickNumberBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_283B5B"
            android:gravity="center"
            android:text="设置点赞次数"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llClickCoordinateBtnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llClickNumberBtnStatus">

        <TextView
            android:id="@+id/tvClickCoordinateBtnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="点赞坐标"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clickCoordinateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_283B5B"
            android:gravity="center"
            android:text="设置点赞坐标"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUserGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llClickCoordinateBtnStatus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="使用教程"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/userGuideBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_283B5B"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAppShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llUserGuide">

        <TextView
            android:id="@+id/tvAppShareTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="APP下载地址"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clickAppShareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_283B5B"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:padding="20dp"
        android:text="提示：
        \n* 注意：开启自动点击后，因为屏幕一直在被点击，所以停止按钮可能点击时候可能会点击无效，可以尝试连续点击5次以上停止按钮。
        \n
        \n停止方式：
        \n1、连续点击5次以上停止按钮
        \n2、锁屏
        \n3、关闭悬浮窗都可以停止该事件
"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/actionStart" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/actionStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/color_283B5B"
        android:gravity="center"
        android:text="开始"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>