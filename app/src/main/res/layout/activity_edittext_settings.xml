<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_anxin_shu" />

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIconTint="@color/white"
        app:title="设置"
        app:titleColor="@color/white" />

    <com.example.androidautoclick.ui.linedlayout.LinedRelativeLayout
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">

        <EditText
            android:id="@+id/hostNameEditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入抖音昵称"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/color_F8F0D6" />

        <EditText
            android:id="@+id/mustEditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/hostNameEditText"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="请输入判断师傅在直播间条件"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/color_F8F0D6" />

    </com.example.androidautoclick.ui.linedlayout.LinedRelativeLayout>

    <TextView
        android:id="@+id/tvCurrentDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="AE86" />

</androidx.constraintlayout.widget.ConstraintLayout>